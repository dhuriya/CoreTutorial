@model CoreActionResult.Models.CitiesViewModel

<h4>CitiesViewModel</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="GetCities" asp-controller="HTMLHelpers" method="post">
            <div class="form-group">
                @Html.ListBoxFor(m=>m.SelectedCityIds, new MultiSelectList(Model.Cities,"CityId","CityName"),new{@class="form-control",size=7})
            </div>
            <input type="submit"  class="btn btn-primary" value="submit" />
        </form>
    </div>
</div>

